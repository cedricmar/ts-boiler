{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./build/",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    // Options required to use 'inversify' module
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "typings/globals/",
    "typings/modules/",
    "tests"
  ]
}